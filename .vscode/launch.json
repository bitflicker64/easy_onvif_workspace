{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "probe list-devices",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "probe",
                "list-devices",
                "--log-level",
                "all"
            ],
        },
        {
            "name": "onvif version",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "version"
            ],
        },
        {
            "name": "onvif device-management get-device-information",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "device-management",
                "get-device-information"
            ],
        },
        {
            "name": "onvif device-management get-system-support-information",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "device-management",
                "get-system-support-information",
                "--network-timeout",
                "15",
                "--log-level",
                "all"
            ],
        },
        {
            "name": "onvif debug",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "debug"
            ],
        },
        {
            "name": "onvif move",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "ptz",
                "move",
                "--x",
                "0",
                "--y",
                "-0.5",
                "--profile-token",
                "Profile_1",
                "--network-timeout",
                "30",
                "--log-level",
                "all"
            ],
        },
        {
            "name": "onvif continuous-move",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "ptz",
                "continuous-move",
                "--pan-tilt-x",
                "-0.01",
                "--pan-tilt-y",
                "0",
                "--pan-tilt-zoom",
                "0",
                "--profile-token",
                "000",
                "--network-timeout",
                "10",
                "--log-level", 
                "all"
            ],
        },
        {
            "name": "onvif stop",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "ptz",
                "stop",
                "--profile-token",
                "Profile_1",
                "--network-timeout",
                "10",
                "--log-level", 
                "all"
            ],
        },
        {
            "name": "onvif media1 get-metadata-configuration",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "media1",
                "get-metadata-configuration",
                "--configuration-token",
                "MetaDataToken",
                "--network-timeout",
                "10",
                "--log-level", 
                "all"
            ],
        },
        {
            "name": "onvif media2 get-metadata-configuration-options",
            "request": "launch",
            "type": "dart",
            "program": "packages/easy_onvif_cli/bin/onvif.dart",
            "args": [
                "media2",
                "get-metadata-configuration-options",
                "--configuration-token",
                "MetaDataToken",
                "--profile-token",
                "000",
                "--network-timeout",
                "10",
                "--log-level", 
                "all"
            ],
        }
    ]
}